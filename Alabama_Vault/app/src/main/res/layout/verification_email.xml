            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/vault_4"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/ll_header_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="30dp"
                        android:background="@drawable/alabama_vault_logo" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_password_block"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                           android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/tv_enter_password"
                            android:text="ENTER THE VERIFICATION CODE EMAILED TO YOU"
                            android:textColor="@color/white"
                            android:textSize="15dp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:layout_weight="4">


                    <EditText
                        android:id="@+id/ed_registered_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="sans-serif"
                        android:gravity="center_horizontal"
                        android:hint="Enter registered Email Id"
                        android:inputType="textEmailAddress"
                        android:padding="3dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/app_dark_grey"
                        android:textColorHint="@color/app_dark_grey"
                        android:textSize="20sp"
                        android:visibility="gone"/>

                    <EditText
                        android:id="@+id/ed_verification_code"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_border_edittext"
                        android:fontFamily="sans-serif"
                        android:inputType="textEmailAddress"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/app_dark_grey"
                        android:hint="VERIFICATION CODE"
                        android:maxLength="12"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:visibility="visible" />


                    <RelativeLayout
                        android:id="@+id/rl_signup_next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">


                        <Button
                            android:id="@+id/tv_submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_centerInParent="true"
                            android:background="@color/apptheme_color"
                            android:text="NEXT"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:visibility="visible"

                            />

                        <Button
                            android:id="@+id/tv_next"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="40dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/buttonshape"
                            android:text="NEXT"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:visibility="gone"/>


                    </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_resend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:text="Resend code"
                            android:textSize="20sp"
                            android:paddingRight="27dp"
                            android:visibility="visible"
                            android:textColor="@drawable/text_selector"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="CANCEL"
                            android:id="@+id/tv_cancel"
                            android:layout_gravity="bottom"
                            android:textSize="15dp"
                            android:paddingLeft="15dp"
                            />
                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

    <include
        android:id="@+id/llToast"
        layout="@layout/toast_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>